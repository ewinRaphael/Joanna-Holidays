    <script>
        // Get the banner section element
        const bannerSection = document.getElementById('hero-banner');
        
        // Get the banners data passed from the server
        const banners = <%- JSON.stringify(banners || []) %>;
        
        // Function to set up the banner rotation
        function setupBannerRotation() {
            // Filter active banners and get all images
            const activeBanners = banners.filter(banner => banner.isActive);
            const bannerImages = activeBanners.flatMap(banner => 
                banner.images.map(img => img.url)
            );
            
            // If no banners, use a default image
            if (bannerImages.length === 0) {
                bannerSection.style.backgroundImage = "url('/images/bg/HEADER.jpg')";
                return;
            }
            
            // Set the first image
            let currentIndex = 0;
            bannerSection.style.backgroundImage = `url('${bannerImages[currentIndex]}')`;
            
            // If there are multiple images, set up rotation
            if (bannerImages.length > 1) {
                // Change image every 5 seconds
                setInterval(() => {
                    currentIndex = (currentIndex + 1) % bannerImages.length;
                    bannerSection.style.backgroundImage = `url('${bannerImages[currentIndex]}')`;
                }, 5000);
            }
        }
        
        // Initialize the banner rotation when the page loads
        document.addEventListener('DOMContentLoaded', setupBannerRotation);
    </script>
