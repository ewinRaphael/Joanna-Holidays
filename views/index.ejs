                                    });
                                });
                            });
                        </script>


                        <script>
                            document.addEventListener('DOMContentLoaded', function () {
                                const categorySelect = document.getElementById('search-category');
                                const subcategorySelect = document.getElementById('search-subcategory');

                                // Create a mapping of categories to their subcategories
                                const categoryMap = {};
                                        <% categories.forEach(category => { %>
                                    categoryMap['<%= category._id %>'] =[];
                                            <% if (category.subCategories && category.subCategories.length > 0) { %>
                                                <% category.subCategories.forEach(subCategory => { %>
                                                    <% if (subCategory.isActive) { %>
                                            categoryMap['<%= category._id %>'].push({
                                                id: '<%= subCategory._id %>',
                                                name: '<%= subCategory.name.replace(/\'/g, "\\'") %>'
                                                        });
                                                    <% } %>
                                                <% }); %>
                                            <% } %>
                                        <% }); %>

                                    // When category changes, update subcategories
                                    categorySelect.addEventListener('change', function () {
                                        const categoryId = this.value;
                                        subcategorySelect.innerHTML = '<option value="">All Subcategories</option>';

                                        if (categoryId && categoryMap[categoryId] && categoryMap[categoryId].length > 0) {
                                            subcategorySelect.disabled = false;
                                            categoryMap[categoryId].forEach(subCat => {
                                                const option = new Option(subCat.name, subCat.id);
                                                subcategorySelect.add(option);
                                            });
                                        } else {
                                            subcategorySelect.disabled = true;
                                            subcategorySelect.innerHTML = '<option value="">No subcategories available</option>';
                                        }
                                    });

                                // Initialize with current category if present
                                if (categorySelect.value) {
                                    categorySelect.dispatchEvent(new Event('change'));
                                }
                            });
                        </script>

