                                try {
                                    const response = await fetch('/testimonials');
                                    const { success, testimonials } = await response.json();

                                    if (success) {
                                        const testimonialList = document.getElementById('testimonial-list');
                                        testimonialList.innerHTML = '';
                                        testimonialList.style = 'display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 20px;';

