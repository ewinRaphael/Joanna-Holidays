                                            const statusClass = testimonial.isActive ? 'status-active' : 'status-inactive';
                                            const statusText = testimonial.isActive ? 'Active' : 'Inactive';

                                            const stars = '★'.repeat(testimonial.rating) + '☆'.repeat(5 - testimonial.rating);

                                            const testimonialCard = document.createElement('div');
                                            testimonialCard.style = 'border: 1px solid #ccc; border-radius: 8px; overflow: hidden; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); padding: 10px; text-align: center;';
                                            testimonialCard.innerHTML = `
                                                <div style="width: 100%; height: 100px; overflow: hidden;">
                                                    <img src="${testimonial.imageUrl}" alt="${testimonial.name}" style="width: 60px; height: 60px; border-radius: 50%; object-fit: cover;">
                                                </div>
                                                <div style="font-weight: bold; margin-top: 10px;">${testimonial.name}</div>
                                                <div style="color: gray; margin-bottom: 10px;">${testimonial.designation}</div>
                                                <div style="margin-bottom: 10px;">${testimonial.content}</div>
                                                <div style="margin-bottom: 10px;">${stars}</div>
                                                <div style="margin-bottom: 10px;">
                                                    <span class="status-badge ${statusClass}">${statusText}</span>
                                                </div>
                                                <div style="display: flex; justify-content: space-around;">
                                                    <button class="tf-button style-5 small" onclick="editTestimonial('${testimonial._id}')">
                                                        <i class="icon-edit"></i>
                                                    </button>
                                                    <button class="tf-button style-3 small" onclick="toggleTestimonialStatus('${testimonial._id}')">
                                                        <i class="icon-power"></i>
                                                    </button>
                                                    <button class="tf-button style-6 small" onclick="deleteTestimonial('${testimonial._id}')">
                                                        <i class="icon-trash-2"></i>
                                                    </button>
                                                </div>
                                            `;
                                            testimonialList.appendChild(testimonialCard);
                                        });
                                    }
                                } catch (error) {
                                    console.error('Error loading testimonials:', error);
                                }
                            }

                            // Add Testimonial
                            document.getElementById('addTestimonialForm').addEventListener('submit', async function (e) {
                                e.preventDefault();

                                const formData = new FormData(this);
                                formData.append('isActive', document.getElementById('testimonialIsActive').checked);

                                try {
                                    const response = await fetch('/admin-testimonials', {
                                        method: 'POST',
                                        body: formData
                                    });

                                    const result = await response.json();

                                    if (result.success) {
                                        closeModal('addTestimonialModal');
                                        this.reset();
                                        loadTestimonials();
                                        showToast('Testimonial added successfully!');
                                    }
                                } catch (error) {
                                    console.error('Error adding testimonial:', error);
                                    showToast('Error adding testimonial', 'error');
                                }
                            });

                            // Edit Testimonial
                            async function editTestimonial(id) {
                                try {
                                    // Changed to use the correct admin route
                                    const response = await fetch(`/admin-testimonials/${id}`);

                                    if (!response.ok) {
                                        const error = await response.json();
                                        throw new Error(error.message || 'Failed to fetch testimonial');
                                    }

                                    const { success, testimonial } = await response.json();

                                    if (success) {
                                        // Populate edit form
                                        document.getElementById('editTestimonialId').value = testimonial._id;
                                        document.getElementById('editTestimonialName').value = testimonial.name;
                                        document.getElementById('editTestimonialDesignation').value = testimonial.designation;
                                        document.getElementById('editTestimonialContent').value = testimonial.content;
                                        document.getElementById('editTestimonialRating').value = testimonial.rating;

                                        // Show current image preview
                                        const preview = document.getElementById('currentTestimonialImagePreview');
                                        preview.innerHTML = `
                <img src="${testimonial.imageUrl}" 
                     class="w-24 h-24 object-cover rounded-md border"
                     alt="Current testimonial image">
                <p class="text-xs mt-1 text-gray-500">Current Image</p>
            `;

                                        showModal('editTestimonialModal');
                                    }
                                } catch (error) {
                                    console.error('Edit error:', error);
                                    showToast(error.message || 'Error loading testimonial', 'error');
                                }
                            }
                            // Update Testimonial
                            document.getElementById('editTestimonialForm').addEventListener('submit', async function (e) {
                                e.preventDefault();

                                const id = document.getElementById('editTestimonialId').value;
                                const formData = new FormData(this);

                                try {
                                    const response = await fetch(`/admin-testimonials/${id}`, {
                                        method: 'PUT',
                                        body: formData
                                    });

                                    const result = await response.json();

                                    if (result.success) {
                                        closeModal('editTestimonialModal');
                                        loadTestimonials();
                                        showToast('Testimonial updated successfully!');
                                    }
                                } catch (error) {
                                    console.error('Error updating testimonial:', error);
                                }
                            });

                            // Toggle Testimonial Status
                            async function toggleTestimonialStatus(id) {
                                try {
                                    const response = await fetch(`/admin-testimonials/toggle-status/${id}`, {
                                        method: 'PATCH'
                                    });

                                    const result = await response.json();

                                    if (result.success) {
                                        loadTestimonials();
                                        showToast(`Testimonial ${result.message}`);
                                    }
                                } catch (error) {
                                    console.error('Error toggling testimonial status:', error);
                                }
                            }

                            // Delete Testimonial
                            async function deleteTestimonial(id) {
                                if (confirm('Are you sure you want to delete this testimonial?')) {
                                    try {
                                        const response = await fetch(`/admin-testimonials/${id}`, {
                                            method: 'DELETE'
                                        });

                                        const result = await response.json();

                                        if (result.success) {
                                            loadTestimonials();
                                            showToast('Testimonial deleted successfully!');
                                        }
                                    } catch (error) {
                                        console.error('Error deleting testimonial:', error);
                                    }
                                }
                            }

                            // Initialize on page load
                            document.addEventListener('DOMContentLoaded', function () {
                                loadTestimonials();
                            });
                            function showModal(modalId) {
                                document.getElementById(modalId).style.display = 'block';
                                document.body.style.overflow = 'hidden'; // Prevent scrolling
                            }

                            function closeModal(modalId) {
                                document.getElementById(modalId).style.display = 'none';
                                document.body.style.overflow = 'auto'; // Re-enable scrolling
                            }

                            // Close modals when clicking outside content
                            window.onclick = function (event) {
                                document.querySelectorAll('.modal').forEach(modal => {
                                    if (event.target == modal) {
                                        closeModal(modal.id);
                                    }
                                });
                            };

                            function showToast(message, type = 'success') {
                                const toast = document.createElement('div');
                                toast.className = `toast-notification ${type}`;
                                toast.textContent = message;
                                document.body.appendChild(toast);

                                setTimeout(() => {
                                    toast.classList.add('show');
                                }, 100);

                                setTimeout(() => {
                                    toast.classList.remove('show');
                                    setTimeout(() => {
                                        toast.remove();
                                    }, 300);
                                }, 3000);
                            }
                        </script>
