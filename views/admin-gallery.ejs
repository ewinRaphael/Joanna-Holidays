                    // Fetch all gallery items
                    async function fetchGalleryItems() {
                        try {
                            const response = await fetch('/list-gallery', {
                                headers: {
                                    'Authorization': `Bearer ${localStorage.getItem('token')}`
                                }
                            });
                            if (!response.ok) throw new Error('Failed to fetch gallery items');
                            galleryItems = await response.json();
                            renderGalleryItems();
                        } catch (error) {
                            console.error('Error:', error);
                            alert('Error loading gallery items');
                        }
                    }

                    // Fetch all video items
                    async function fetchVideoItems() {
                        try {
                            const response = await fetch('/videos', {
                                headers: {
                                    'Authorization': `Bearer ${localStorage.getItem('token')}`
                                }
                            });
                            if (!response.ok) throw new Error('Failed to fetch videos');
                            videoItems = await response.json();
                            renderVideoItems();
                        } catch (error) {
                            console.error('Error:', error);
                            alert('Error loading videos');
                        }
                    }

                    // Render gallery items
                    function renderGalleryItems() {
                        const galleryList = document.getElementById('gallery-list');
                        galleryList.innerHTML = '';
                        galleryList.style = 'display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 20px;';
                        galleryItems.forEach(item => {
                            const galleryCard = document.createElement('div');
                            galleryCard.style = 'border: 1px solid #ccc; border-radius: 8px; overflow: hidden; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);';
                            galleryCard.innerHTML = `
                                <div style="width: 100%; height: 150px; overflow: hidden;">
                                    <img src="${item.imageUrl}" alt="${item.title}" style="width: 100%; height: 100%; object-fit: cover;">
                                </div>
                                <div style="padding: 10px; text-align: center;">
                                    <div style="font-weight: bold; margin-bottom: 10px;">${item.title}</div>
                                    <div style="display: flex; justify-content: space-around;">
                                        <button class="tf-button style-3" onclick="confirmDeleteGalleryItem('${item._id}')" style="font-size: 14px;">
                                            <i class="icon-trash-2"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            `;
                            galleryList.appendChild(galleryCard);
                        });
                    }

                    // Render video items
                    function renderVideoItems() {
                        const videoList = document.getElementById('video-list');
                        videoList.innerHTML = '';
                        videoList.style = 'display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 20px;';
                        videoItems.forEach(item => {
                            const videoCard = document.createElement('div');
                            videoCard.style = 'border: 1px solid #ccc; border-radius: 8px; overflow: hidden; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); background: #fff;';
                            videoCard.innerHTML = `
                                <div style="width: 100%; height: 180px; overflow: hidden; display: flex; align-items: center; justify-content: center;">
                                    ${getYouTubeEmbed(item.youtubeLink)}
                                </div>
                                <div style="padding: 10px; text-align: center;">
                                    <div style="font-weight: bold; margin-bottom: 10px;">${item.title || ''}</div>
                                    <div style="display: flex; justify-content: center;">
                                        <button class="tf-button style-3" onclick="confirmDeleteVideoItem('${item._id}')" style="font-size: 14px;">
                                            <i class="icon-trash-2"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            `;
                            videoList.appendChild(videoCard);
                        });
                    }

                    // Helper to get YouTube embed iframe
                    function getYouTubeEmbed(link) {
                        if (!link) return '';
                        let videoId = '';
                        try {
                            // Try to extract video ID from various YouTube URL formats
                            const url = new URL(link);
                            if (url.hostname === 'youtu.be') {
                                videoId = url.pathname.slice(1);
                            } else if (url.hostname.includes('youtube.com')) {
                                videoId = url.searchParams.get('v');
                            }
                        } catch (e) {
                            // fallback: try regex
                            const match = link.match(/(?:youtu\.be\/|youtube\.com\/(?:watch\?v=|embed\/|v\/))([\w-]{11})/);
                            if (match) videoId = match[1];
                        }
                        if (!videoId) return '<div class="text-tiny text-danger">Invalid YouTube Link</div>';
                        return `<iframe width="100%" height="170" src="https://www.youtube.com/embed/${videoId}" frameborder="0" allowfullscreen></iframe>`;
                    }

                    // Show Add Gallery Modal
                    function showAddGalleryModal() {
