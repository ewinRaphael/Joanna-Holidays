                        document.getElementById('videoTabContent').style.display = tab === 'video' ? '' : 'none';
                        document.getElementById('gallery-tab').classList.toggle('active', tab === 'gallery');
                        document.getElementById('video-tab').classList.toggle('active', tab === 'video');
                    }
                    function setupTabs() {
                        showTab('gallery');
